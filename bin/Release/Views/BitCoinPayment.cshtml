        background-color: #F7F7F9;
        border: 1px solid #E1E1E8;
        white-space: nowrap;
        padding: 2px 10px 3px 10px;
        border-radius: 3px;
        display: inline;
    }

        .addr a {
            color: #333 !important
        }

    .btn-wallet {
        background-color: #F7F9FB;
        background-image: linear-gradient(#FFF, #F7F9FB);
        border: 1px solid #D4DCE4;
        border-radius: 3px;
        color: #263D52;
        display: inline-block;
        font-size: 13px;
        height: 26px;
        line-height: 16px;
        width: 100px;
        margin: 0 10px 0 0;
        padding: 4px 10px;
        text-align: center;
        vertical-align: middle;
        white-space: nowrap;
        cursor: pointer;
    }

    .btn-wait, .btn-res {
        background-color: #0099ff;
        border: 1px solid #61bffd;
        border-radius: 3px;
        color: #FFF;
        cursor: pointer;
        display: inline-block;
        font-size: 15px;
        height: 35px;
        line-height: 16px;
        margin: 0;
        opacity: 0.65;
        padding: 4px 10px;
        text-align: center;
        vertical-align: middle;
        white-space: nowrap;
        width: 220px;
        cursor: pointer;
        width: 100%;
    }

    .btn-wallet:hover, .btn-copy:hover {
        background: #fafafa;
        border-color: #bbb;
        color: #222;
    }

    .column {
        float: right;
    }

    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    .area {
        border: 1px #cdcdcd;
        border-style: solid;
        padding: 30px;
    }

    .amount {
        margin-bottom: 20px;
        width: 71%;
    }

    .right {
        text-align: right;
    }

    .bold {
        font-style: italic;
        font-weight: bold;
    }

    .btn-spinner {
        position: relative;
        top: 2px;
        right: 5px;
        display: inline-block;
        width: 20px;
        height: 20px;
        border: solid 2px transparent;
        border-top-color: #fff;
        border-left-color: #fff;
        border-right-color: #fff;
        border-radius: 10px;
        -webkit-animation: spinner 800ms linear infinite;
        -moz-animation: spinner 800ms linear infinite;
        -ms-animation: spinner 800ms linear infinite;
        -o-animation: spinner 800ms linear infinite;
        animation: spinner 800ms linear infinite;
        float: right;
    }

    @@-webkit-keyframes spinner {
        0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg)
        }

        100% {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg)
        }
    }

    @@-moz-keyframes spinner {
        0% {
            -moz-transform: rotate(0deg);
            transform: rotate(0deg)
        }

        100% {
            -moz-transform: rotate(360deg);
            transform: rotate(360deg)
        }
    }

    @@-o-keyframes spinner {
        0% {
            -o-transform: rotate(0deg);
            transform: rotate(0deg)
        }

        100% {
            -o-transform: rotate(360deg);
            transform: rotate(360deg)
        }
    }

    @@-ms-keyframes spinner {
        0% {
            -ms-transform: rotate(0deg);
            transform: rotate(0deg)
        }

        100% {
            -ms-transform: rotate(360deg);
            transform: rotate(360deg)
        }
    }

    @@keyframes spinner {
        0% {
            transform: rotate(0deg);
            transform: rotate(0deg)
        }

        100% {
            transform: rotate(360deg);
            transform: rotate(360deg)
        }
    }
</style>

<div class="page checkout-page order-confirm-page">
    <div class="page-title">
        <h1>@T("nop.plugin.payments.bitcoin.checkoutbitcoinpayment")</h1>
    </div>
    <div class="page-body checkout-data">
        <div class="section confirm-order">
            <div align="center">
                <div id="waiting" class="row area" style="width:50%">
                    <div>
                        <img class="logo" border="0" alt="Bitcoin Payment System" src="~/Plugins/Payments.BitCoin/Images/payment.png"></a>
                    </div>
